<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#393a3f"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/activity_xinhua_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:hint="输入"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/activity_xinhua_serch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:layout_toRightOf="@+id/activity_xinhua_edit"
                android:src="@drawable/ic_search_white_72pt_2x" />
        </LinearLayout>

        <TextView
            android:id="@+id/activity_xinhua_zi"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title" />

        <TextView
            android:id="@+id/activity_xinhua_bushou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="16sp"
            android:layout_below="@+id/activity_xinhua_zi" />

        <TextView
            android:id="@+id/activity_xinhua_wubi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="16sp"
            android:layout_below="@+id/activity_xinhua_bushou" />

        <TextView
            android:id="@+id/activity_xinhua_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="16sp"
            android:layout_below="@+id/activity_xinhua_wubi" />

        <TextView
            android:id="@+id/activity_xinhua_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="16sp"
            android:layout_below="@+id/activity_xinhua_explain" />

    </RelativeLayout>
</ScrollView>